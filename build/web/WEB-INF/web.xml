<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ValidateLogin</servlet-name>
        <servlet-class>servlet.ValidateLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewOrder</servlet-name>
        <servlet-class>servlet.NewOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveOrder</servlet-name>
        <servlet-class>servlet.RemoveOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditOrder</servlet-name>
        <servlet-class>servlet.EditOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidateLogin</servlet-name>
        <url-pattern>/ValidateLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewOrder</servlet-name>
        <url-pattern>/NewOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveOrder</servlet-name>
        <url-pattern>/RemoveOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditOrder</servlet-name>
        <url-pattern>/EditOrder</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
